<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="album.Controller.AskAlbumNamePane" fx:id="askalbumnamepane">
     <children>
        <VBox alignment="CENTER" prefHeight="250.0" prefWidth="400.0" style="-fx-border-width: 5; -fx-border-color: Black; -fx-background-color: #acacac;">
           <children>
                 <Label alignment="CENTER" contentDisplay="CENTER" text="Insert the name of the album" textAlignment="CENTER">
                    <font>
                       <Font size="20.0" />
                    </font>
                    <VBox.margin>
                       <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                 </Label>
                <TextField fx:id="input_name" onAction="#EnterClick" prefHeight="38.0" prefWidth="350.0">
                   <VBox.margin>
                      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                   </VBox.margin>
                </TextField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" text="Enter" onAction="#EnterClick">
                     <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </HBox.margin>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" text="Cancel" onAction="#CancelClick"/>
               </children>
            </HBox>
           </children>
        </VBox>
     </children>
</Pane>
